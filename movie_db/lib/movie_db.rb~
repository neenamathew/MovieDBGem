module MovieDb
require 'httparty'
include HTTParty

 class Movie

  def self.set_key(api_key)?
    @api_key = "?api_key=" + api_key
  end

  def self.set_url(url)?
    @base_url = url
  end

  def self.search_movie(query)?
    url = @base_url + "search/movie" + @api_key + "&query=" + query
    self.class.get(url)
  end

 end

end
